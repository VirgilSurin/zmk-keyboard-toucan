            >;
        };

        fn {
            bindings = <
&none  &none  &kp F7  &kp F8  &kp F9  &kp F10  &none  &none  &none  &none  &none  &none  &none  &none  &kp F4  &kp F5  &kp F6  &kp F11  &none  &kp C_VOLUME_DOWN  &kp K_PLAY_PAUSE  &kp K_MUTE  &kp C_VOLUME_UP  &none  &none  &none  &kp F1  &kp F2  &kp F3  &kp F12  &none  &none  &none  &none  &none  &none  &none  &none  &none  &none  &none  &none
